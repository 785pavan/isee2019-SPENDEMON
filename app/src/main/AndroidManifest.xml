<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dbse.android.spendemon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FilterActivity"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dbse.android.spendemon.MainActivity" />
        </activity>
        <activity
            android:name=".ChartMonthActivity"
            android:label="Monthly chart"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ChartDayActivity"
            android:theme="@style/ActivityDialog" />
        <activity android:name=".PieChartDailyActivity" />
        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/ActivityDialog" />
        <activity android:name=".TrendLineActivity" />
        <activity android:name=".PieChartActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".itemEntry" />
        <activity android:name=".EditData" />
        <activity android:name=".Calculator" />
        <activity
            android:name=".Summary"
            android:label="@string/title_activity_summary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SignUpLogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>